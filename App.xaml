<Application x:Class="StudyOfWpfApplication1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate  x:Key="CornerTextBox" TargetType="{x:Type TextBox}">
            <Border BorderBrush="#a3d3fb" BorderThickness="1" CornerRadius="20" 
                    Height="33" Width="140"  Background="White">
                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="9,7,9,6"/>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
